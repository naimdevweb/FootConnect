{# templates/components/layout/section.html.twig #}
{# Composants de sections pour la mise en page #}

{% macro standard(additionalClasses = '') %}
    py-6 sm:py-8 md:py-12 {{ additionalClasses }}
{% endmacro %}

{% macro hero(additionalClasses = '') %}
    py-8 sm:py-12 md:py-16 lg:py-20 bg-light-100 dark:bg-dark-800 text-dark-900 dark:text-light-100 {{ additionalClasses }}
{% endmacro %}

{% macro card(additionalClasses = '') %}
    bg-white dark:bg-dark-800 rounded-lg shadow-md p-6 transition-colors duration-200 {{ additionalClasses }}
{% endmacro %}

{% macro divided(additionalClasses = '') %}
    py-6 sm:py-8 md:py-12 border-b border-gray-200 dark:border-gray-700 {{ additionalClasses }}
{% endmacro %}

{% macro withBackground(color = 'light', additionalClasses = '') %}
    {% if color == 'light' %}
        bg-light-100 dark:bg-dark-800 text-dark-900 dark:text-light-100
    {% elseif color == 'primary' %}
        bg-primary-100 dark:bg-primary-900 text-dark-900 dark:text-light-100
    {% elseif color == 'dark' %}
        bg-dark-800 text-light-100
    {% endif %} py-8 sm:py-12 {{ additionalClasses }}
{% endmacro %}