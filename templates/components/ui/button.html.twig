{# templates/components/ui/button.html.twig #}
{# Composants de boutons pour l'interface utilisateur #}

{% macro primary(text, href = '#', icon = null, additionalClasses = '') %}
    <a href="{{ href }}" class="inline-flex items-center justify-center px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-700 dark:hover:bg-primary-800 text-white font-medium rounded-md shadow-sm transition-colors duration-200 {{ additionalClasses }}">
        {% if icon %}
            <i class="fas fa-{{ icon }} mr-2"></i>
        {% endif %}
        {{ text }}
    </a>
{% endmacro %}

{% macro secondary(text, href = '#', icon = null, additionalClasses = '') %}
    <a href="{{ href }}" class="inline-flex items-center justify-center px-4 py-2 bg-light-200 hover:bg-light-300 dark:bg-dark-700 dark:hover:bg-dark-600 text-dark-800 dark:text-light-200 font-medium rounded-md shadow-sm transition-colors duration-200 {{ additionalClasses }}">
        {% if icon %}
            <i class="fas fa-{{ icon }} mr-2"></i>
        {% endif %}
        {{ text }}
    </a>
{% endmacro %}

{% macro icon(icon, href = '#', tooltip = null, additionalClasses = '') %}
    <a href="{{ href }}" {% if tooltip %}title="{{ tooltip }}"{% endif %} class="inline-flex items-center justify-center p-2 bg-light-100 hover:bg-light-200 dark:bg-dark-800 dark:hover:bg-dark-700 text-dark-700 dark:text-light-300 rounded-full transition-colors duration-200 {{ additionalClasses }}">
        <i class="fas fa-{{ icon }}"></i>
    </a>
{% endmacro %}

{% macro submit(text, icon = null, additionalClasses = '') %}
    <button type="submit" class="inline-flex items-center justify-center px-4 py-2 bg-primary-600 hover:bg-primary-700 dark:bg-primary-700 dark:hover:bg-primary-800 text-white font-medium rounded-md shadow-sm transition-colors duration-200 {{ additionalClasses }}">
        {% if icon %}
            <i class="fas fa-{{ icon }} mr-2"></i>
        {% endif %}
        {{ text }}
    </button>
{% endmacro %}