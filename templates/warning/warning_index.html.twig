            <span class="text-xs mt-1">Modération</span>
            <div class="absolute -bottom-2 w-10 h-1 bg-amber-600 dark:bg-amber-400 rounded-full transition-colors duration-200"></div>
        </a>
        <a href="{{ path('app_profil') }}" class="flex flex-col items-center text-gray-600 dark:text-gray-400 p-2 transition-colors duration-200">
            <i class="fas fa-user text-xl"></i>
            <span class="text-xs mt-1">Profil</span>
        </a>
    </div>
</nav>
{% endblock %}