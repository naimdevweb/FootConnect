{% extends 'base.html.twig' %}

{% block title %}Modifier l'avertissement{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    .fade-in {
        animation: fadeIn 0.6s ease-in-out;
    }
    .slide-up {
        animation: slideUp 0.5s ease-in-out;
    }
    .pulse {
        animation: pulse 2s infinite;
    }
    .hover-scale {
        transition: transform 0.3s ease;
    }
    .hover-scale:hover {
        transform: scale(1.03);
    }
    .form-input {
        transition: all 0.3s ease;
    }
    .form-input:focus {
        box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.3);
    }
    .dark .form-input:focus {
        box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.3);
    }
    .btn-gradient {
        background: linear-gradient(45deg, #3b82f6, #60a5fa);
        transition: all 0.3s ease;
    }
    .dark .btn-gradient {
        background: linear-gradient(45deg, #2563eb, #3b82f6);
    }
    .btn-gradient:hover {
        background: linear-gradient(45deg, #2563eb, #3b82f6);
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.3);
    }
    .dark .btn-gradient:hover {
        background: linear-gradient(45deg, #1d4ed8, #2563eb);
        box-shadow: 0 10px 15px -3px rgba(37, 99, 235, 0.4);
    }
    .card {
        transition: all 0.3s ease;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    }
    .dark .card {
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.3), 0 4px 6px -2px rgba(0, 0, 0, 0.2);
    }
    .card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    }
    .dark .card:hover {
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.3), 0 10px 10px -5px rgba(0, 0, 0, 0.2);
    }
    @keyframes fadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
    }
    @keyframes slideUp {
        from { transform: translateY(30px); opacity: 0; }
        to { transform: translateY(0); opacity: 1; }
    }
    @keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(59, 130, 246, 0); }
        100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0); }
    }
    .dark @keyframes pulse {
        0% { box-shadow: 0 0 0 0 rgba(96, 165, 250, 0.4); }
        70% { box-shadow: 0 0 0 10px rgba(96, 165, 250, 0); }
        100% { box-shadow: 0 0 0 0 rgba(96, 165, 250, 0); }
    }
</style>
{% endblock %}

{% block body %}
<div class="bg-gradient-to-br from-blue-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 min-h-screen py-12 px-4 sm:px-6 lg:px-8 fade-in transition-colors duration-200">
    <div class="container mx-auto max-w-3xl">
        <div class="card bg-white dark:bg-gray-800 rounded-xl shadow-lg overflow-hidden slide-up hover-scale transition-colors duration-200">
            <div class="bg-gradient-to-r from-blue-700 to-blue-800 dark:from-blue-800 dark:to-blue-900 px-6 py-6 rounded-t-xl transition-colors duration-200">
                <h1 class="text-2xl font-bold text-white flex items-center">
                    <span class="material-icons text-blue-200 mr-3">edit</span>
                    Modifier l'avertissement
                </h1>
                <p class="text-blue-100 mt-1 flex items-center">
                    <span class="material-icons text-sm mr-1">person</span>
                    Pour l'utilisateur: <span class="font-medium ml-1">{{ warning.user.pseudo }}</span>
                </p>
            </div>
            
            <div class="p-8">
                <div class="bg-yellow-50 dark:bg-yellow-900/20 rounded-lg p-4 mb-6 border-l-4 border-yellow-500 dark:border-yellow-600 transition-colors duration-200">
                    <p class="text-yellow-800 dark:text-yellow-200 text-sm flex items-center transition-colors duration-200">
                        <span class="material-icons text-yellow-600 dark:text-yellow-400 mr-2 transition-colors duration-200">lightbulb</span>
                        La modification d'un avertissement sera notifiée à l'utilisateur concerné.
                    </p>
                </div>
                
                {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                    <div class="slide-up" style="animation-delay: 0.1s">
                        {{ form_label(form.reason, 'Motif', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 transition-colors duration-200'}}) }}
                        {{ form_widget(form.reason, {'attr': {'class': 'form-input block w-full rounded-lg border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 dark:focus:border-blue-400 focus:ring-0 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 transition-colors duration-200'}}) }}
                        {{ form_errors(form.reason, {'attr': {'class': 'text-red-500 dark:text-red-400 text-sm mt-1 transition-colors duration-200'}}) }}
                    </div>
                    
                    <div class="slide-up" style="animation-delay: 0.2s">
                        {{ form_label(form.description, 'Description', {'label_attr': {'class': 'block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2 transition-colors duration-200'}}) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-input block w-full rounded-lg border-gray-300 dark:border-gray-600 shadow-sm focus:border-blue-500 dark:focus:border-blue-400 focus:ring-0 bg-white dark:bg-gray-700 text-gray-800 dark:text-gray-200 transition-colors duration-200', 'rows': 5}}) }}
                        {{ form_errors(form.description, {'attr': {'class': 'text-red-500 dark:text-red-400 text-sm mt-1 transition-colors duration-200'}}) }}
                    </div>
                    
                    <div class="pt-6 flex flex-col sm:flex-row justify-between items-center gap-4 sm:gap-0 border-t border-gray-200 dark:border-gray-700 mt-8 slide-up transition-colors duration-200" style="animation-delay: 0.3s">
                        <a href="{{ path('app_warning_show', {'id': warning.id}) }}" 
                           class="inline-flex items-center justify-center w-full sm:w-auto px-5 py-2.5 rounded-lg border border-gray-300 dark:border-gray-600 text-sm font-medium text-gray-700 dark:text-gray-300 bg-white dark:bg-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600 hover:text-gray-900 dark:hover:text-white transition ease-in-out duration-150">
                            <span class="material-icons mr-2">arrow_back</span> 
                            Retour
                        </a>
                        <button type="submit" 
                                class="btn-gradient inline-flex items-center justify-center w-full sm:w-auto px-5 py-2.5 rounded-lg border border-transparent text-sm font-medium text-white focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-800">
                            <span class="material-icons mr-2">save</span>
                            Enregistrer les modifications
                        </button>
                    </div>
                {{ form_end(form) }}
            </div>
        </div>
        
        <div class="text-center mt-8 text-gray-500 dark:text-gray-400 text-sm fade-in transition-colors duration-200" style="animation-delay: 0.4s">
            <p>Centre de modération - FootConnect</p>
        </div>
    </div>
</div>
{% endblock %}