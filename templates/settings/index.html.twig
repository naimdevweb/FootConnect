{% block stylesheets %}
	{{ parent() }}
	<style>
		.settings-section {
			transition: all 0.3s ease;
		}

		.settings-section:hover {
			background-color: rgba(243, 244, 246, 0.6);
		}

		.switch {
			position: relative;
			display: inline-block;
			width: 44px;
			height: 24px;
		}

		.switch input {
			opacity: 0;
			width: 0;
			height: 0;
		}

		.slider {
			position: absolute;
			cursor: pointer;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background-color: #ccc;
			transition: 0.3s;
			border-radius: 24px;
		}

		.slider:before {
			position: absolute;
			content: "";
			height: 18px;
			width: 18px;
			left: 3px;
			bottom: 3px;
			background-color: white;
			transition: 0.3s;
			border-radius: 50%;
		}

		input:checked + .slider {
			background-color: #3b82f6;
		}

		input:checked + .slider:before {
			transform: translateX(20px);
		}
	</style>
{% endblock %}

