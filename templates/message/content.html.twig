
{% if app.user.id == message.author.id %}
<p class="message text-sm p-2 mr-3 mb-2 text-white rounded-lg text-left bg-gray-800"
    data-bs-toggle="tooltip"
    data-bs-title="{{ message.createdAt | date('d/m/Y H:i:s') }}">
     {{ message.content }}
</p>
{% else %}
<p class="message text-sm p-2 mr-3 mb-1 text-white rounded-lg bg-gray-800"
    data-bs-toggle="tooltip"
    data-bs-title="{{ message.createdAt | date('d/m/Y H:i:s') }}">
     {{ message.content }}
</p>
{% endif %}
