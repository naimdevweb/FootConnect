{% extends 'base.html.twig' %}

{% block title %}Explorer - FootConnect{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animations et transitions */
        .image-hover {
            transition: transform 0.4s ease-out;
        }
        .image-hover:hover {
            transform: scale(1.03);
        }
        
        .fade-up {
            opacity: 1;
            transform: translateY(0);
        }
        
        /* Masquer scrollbar mais permettre de scroller */
        .scrollbar-hide {
            -ms-overflow-style: none;
            scrollbar-width: none;
        }
        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }
        
        /* Effet de superposition pour les photos */
        .photo-overlay {
            background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.2) 70%, rgba(0,0,0,0) 100%);
            opacity: 1; /* Toujours visible */
        }
        
        /* Système d'affichage des commentaires CSS-only */
        .comments-toggle {
            display: none; /* Cache la checkbox */
        }
        
        .comments-section {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.3s ease, padding 0.3s ease;
            padding-top: 0;
            padding-bottom: 0;
        }
        
        .comments-toggle:checked + .comments-section {
            max-height: 300px; /* Hauteur maximum quand visible */
            padding-top: 0.75rem;
            padding-bottom: 0.75rem;
            overflow-y: auto;
        }
        
        .comments-label {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
<main class="min-h-screen bg-gray-50 pb-20 md:pb-0">
    <!-- En-tête avec barre de recherche -->
    <div class="sticky top-0 z-30 bg-white border-b border-gray-200 shadow-sm">
        <div class="container mx-auto px-4 py-3">
            <div class="flex items-center justify-between">
                <h1 class="text-xl font-bold text-gray-800 text-center w-full">Explorer</h1>
            </div>
        </div>
    </div>
    
    <!-- Contenu principal -->
    <div class="container mx-auto px-4 py-6">
        <!-- Photos populaires - Version améliorée -->
        <section class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-800 flex items-center">
                    <i class="fas fa-fire text-blue-600 mr-2"></i>
                    Photos populaires
                </h2>
                <a href="#" class="text-blue-600 text-sm font-medium hover:underline">Voir tout</a>
            </div>
            
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                {% for photo in popularPhotos|default([]) %}
                    <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all duration-300">
                        <!-- En-tête avec info utilisateur -->
                        <div class="flex items-center px-4 py-3 border-b border-gray-100">
                            <a href="{{ path('app_profil_user', {'id': photo.user.id}) }}" class="flex items-center">
                                <div class="w-10 h-10 rounded-full flex-shrink-0 bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center text-white font-bold text-lg">
                                    {{ photo.user.pseudo|slice(0,1)|upper }}
                                </div>
                                <div class="ml-3">
                                    <span class="font-medium text-gray-900">{{ photo.user.pseudo }}</span>
                                    <div class="text-xs text-gray-500">
                                        {% if photo.createdAt is defined %}
                                            {{ photo.createdAt|date('d/m/Y') }}
                                        {% endif %}
                                    </div>
                                </div>
                            </a>
                            
                            <div class="ml-auto">
                                <button class="text-gray-400 hover:text-gray-600">
                                    <i class="fas fa-ellipsis-h"></i>
                                </button>
                            </div>
                        </div>
                        
                        <!-- Image principale -->
                        <div class="group relative">
                            <a href="#" class="block">
                                <img src="{{ asset('uploads/photos/' ~ photo.photoUrl) }}" 
                                     alt="Photo de {{ photo.user.pseudo }}"
                                     class="w-full aspect-square object-cover object-center">
                                     
                                <!-- Overlay toujours visible -->
                                <div class="absolute inset-0  flex items-end justify-between p-4 pointer-events-none">
                                    <div class="flex items-center space-x-3 text-white">
                                       
                                     
                                    </div>
                                </div>
                            </a>
                        </div>
                        
                        <!-- Actions et commentaires -->
                        <div class="px-4 py-3">
                            <div class="flex justify-between mb-2">
                                <div class="flex space-x-4">
                                    <button class="text-gray-800 hover:text-red-500 transition-colors">
                                        <i class="far fa-heart text-xl"></i>
                                    </button>
                                    <button class="text-gray-800 hover:text-blue-500 transition-colors">
                                        <i class="far fa-comment text-xl"></i>
                                    </button>
                                    <button class="text-gray-800 hover:text-blue-500 transition-colors">
                                        <i class="far fa-paper-plane text-xl"></i>
                                    </button>
                                </div>
                                <button class="text-gray-800 hover:text-blue-500 transition-colors">
                                    <i class="far fa-bookmark text-xl"></i>
                                </button>
                            </div>
                            
                            <div class="text-sm">
                                <span class="font-semibold">{{ photo.likes|length }} j'aime</span>
                                
                                {% if photo.comments|length > 0 %}
                                <label for="comments-toggle-{{ photo.id }}" class="block text-gray-500 mt-1 hover:text-gray-600 comments-label">
                                    Voir les {{ photo.comments|length }} commentaires
                                </label>
                                
                                <input type="checkbox" id="comments-toggle-{{ photo.id }}" class="comments-toggle">
                                <div class="comments-section bg-gray-50 px-3 rounded-md mt-2 border-t border-gray-100">
                                    {% for comment in photo.comments %}
                                        <div class="py-3 {% if not loop.last %}border-b border-gray-200{% endif %}">
                                            <div class="flex items-start space-x-3">
                                                <!-- Avatar utilisateur -->
                                                <div class="w-10 h-10 rounded-full bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center text-white font-bold text-sm shadow-md">
                                                    {{ comment.user.pseudo|slice(0,1)|upper }}
                                                </div>
                                                
                                                <!-- Contenu du commentaire -->
                                                <div class="flex-1">
                                                    <div class="flex justify-between items-center">
                                                        <span class="font-semibold text-gray-900 text-sm">{{ comment.user.pseudo }}</span>
                                                        <span class="text-xs text-gray-500">
                                                            {% if comment.createdAt is defined %}
                                                                {{ comment.createdAt|date('d/m/Y à H:i') }}
                                                            {% endif %}
                                                        </span>
                                                    </div>
                                                    <p class="text-gray-700 text-sm mt-1">
                                                        {{ comment.message }}
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="col-span-full bg-white rounded-xl p-10 text-center">
                        <div class="text-gray-400 mb-3">
                            <i class="fas fa-images text-5xl"></i>
                        </div>
                        <p class="text-gray-600">Aucune photo à afficher pour le moment</p>
                    </div>
                {% endfor %}
            </div>
        </section>
        
        <!-- Utilisateurs suggérés - Limité à 2 -->
        <section class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-800 flex items-center">
                    <i class="fas fa-user-plus text-blue-600 mr-2"></i>
                    Suggestions pour vous
                </h2>
                <a href="#" class="text-blue-600 text-sm font-medium hover:underline">Voir tout</a>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                {% set regularUsersCount = 0 %}
                {% set maxSuggestions = 2 %}
                
                {% for user in suggestedUsers|default([]) %}
                    {% set isAdmin = false %}
                    {% set isModerator = false %}
                    
                    {% if user.roles is defined %}
                        {% for role in user.roles %}
                            {% if role == 'ROLE_ADMIN' or role == 'ROLE_ADMINISTRATOR' %}
                                {% set isAdmin = true %}
                            {% endif %}
                            {% if role == 'ROLE_MODERATOR' or role == 'ROLE_MODERATEUR' %}
                                {% set isModerator = true %}
                            {% endif %}
                        {% endfor %}
                    {% endif %}
                    
                    {% if not isAdmin and not isModerator and (not app.user or app.user.id != user.id) %}
                        {% set regularUsersCount = regularUsersCount + 1 %}
                        
                        {% if regularUsersCount <= maxSuggestions %}
                        <div class="flex items-center p-4 {% if regularUsersCount < maxSuggestions %}border-b border-gray-100{% endif %} hover:bg-gray-50 transition-colors">
                            <!-- Avatar utilisateur -->
                            <div class="w-12 h-12 rounded-full flex-shrink-0 bg-gradient-to-r from-blue-500 to-blue-600 flex items-center justify-center text-white font-bold text-lg shadow-sm">
                                {{ user.pseudo|slice(0,1)|upper }}
                            </div>
                            
                            <!-- Infos utilisateur -->
                            <div class="flex-1 min-w-0 ml-3">
                                <div>
                                    <a href="{{ path('app_profil_user', {'id': user.id}) }}" 
                                       class="font-semibold text-gray-900 hover:text-blue-600 transition-colors">
                                        {{ user.pseudo }}
                                    </a>
                                    <div class="flex items-center text-xs text-gray-500 mt-1">
                                        <span class="flex items-center">
                                            <i class="fas fa-image mr-1.5"></i>{{ user.photos|length }}
                                        </span>
                                        <span class="mx-1">•</span>
                                        <span class="flex items-center">
                                            {% if user.followers is defined %}
                                            <i class="fas fa-user mr-1.5"></i>{{ user.followers|length }}
                                            {% else %}
                                            <i class="fas fa-user mr-1.5"></i>0
                                            {% endif %}
                                        </span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Bouton suivre -->
                            {% if app.user and app.user.id != user.id %}
                                <a href="{{ path('app_profil_user', {'id': user.id}) }}" class="bg-blue-600 hover:bg-blue-700 text-white text-sm px-4 py-1.5 rounded-full shadow-sm transition-colors">
                                    Voir Profil
                                </a>
                            {% endif %}
                        </div>
                        {% endif %}
                    {% endif %}
                {% else %}
                    <div class="p-10 text-center">
                        <div class="text-gray-400 mb-3">
                            <i class="fas fa-users text-5xl"></i>
                        </div>
                        <p class="text-gray-600">Aucune suggestion disponible</p>
                    </div>
                {% endfor %}
                
                {% if suggestedUsers|default([])|length > 0 and regularUsersCount == 0 %}
                    <div class="p-10 text-center">
                        <div class="text-gray-400 mb-3">
                            <i class="fas fa-users text-5xl"></i>
                        </div>
                        <p class="text-gray-600">Aucune suggestion disponible</p>
                    </div>
                {% endif %}
            </div>
        </section>
        
        <!-- Événements sportifs -->
        <section class="mb-8">
            <div class="flex items-center justify-between mb-4">
                <h2 class="text-lg font-semibold text-gray-800 flex items-center">
                    <i class="fas fa-calendar-alt text-blue-600 mr-2"></i>
                    Événements à venir
                </h2>
                <a href="#" class="text-blue-600 text-sm font-medium hover:underline">Voir tout</a>
            </div>
            
            <div class="bg-white rounded-xl shadow-sm overflow-hidden">
                <div class="p-4 border-b border-gray-100 hover:bg-gray-50 transition-colors">
                    <div class="flex items-start space-x-3">
                        <div class="w-14 h-14 bg-blue-50 rounded-xl flex flex-col items-center justify-center flex-shrink-0 text-blue-600 border border-blue-100">
                            <span class="text-xs font-medium">JUIN</span>
                            <span class="text-lg font-bold">15</span>
                        </div>
                        <div class="flex-1">
                            <h3 class="font-medium text-gray-900">Tournoi amateur de Paris</h3>
                            <p class="text-sm text-gray-500 mt-1">Stade Jean Bouin, Paris</p>
                            <div class="flex items-center space-x-4 mt-2">
                                <span class="text-xs text-gray-500"><i class="fas fa-users mr-1"></i> 24 équipes</span>
                                <span class="text-xs text-gray-500"><i class="fas fa-clock mr-1"></i> 09:00 - 18:00</span>
                            </div>
                        </div>
                        <button class="text-blue-600 hover:text-blue-700 transition-colors">
                            <i class="far fa-bell"></i>
                        </button>
                    </div>
                </div>
                
                <div class="p-4 hover:bg-gray-50 transition-colors">
                    <div class="flex items-start space-x-3">
                        <div class="w-14 h-14 bg-blue-50 rounded-xl flex flex-col items-center justify-center flex-shrink-0 text-blue-600 border border-blue-100">
                            <span class="text-xs font-medium">JUIN</span>
                            <span class="text-lg font-bold">22</span>
                        </div>
                        <div class="flex-1">
                            <h3 class="font-medium text-gray-900">Match amical U17</h3>
                            <p class="text-sm text-gray-500 mt-1">Complexe sportif de Lyon</p>
                            <div class="flex items-center space-x-4 mt-2">
                                <span class="text-xs text-gray-500"><i class="fas fa-users mr-1"></i> 2 équipes</span>
                                <span class="text-xs text-gray-500"><i class="fas fa-clock mr-1"></i> 14:30 - 16:30</span>
                            </div>
                        </div>
                        <button class="text-blue-600 hover:text-blue-700 transition-colors">
                            <i class="far fa-bell"></i>
                        </button>
                    </div>
                </div>
            </div>
        </section>
    </div>
    
    <!-- Navigation mobile repensée -->
    <nav class="md:hidden fixed bottom-0 left-0 right-0 bg-white border-t border-gray-200 shadow-lg z-10">
        <div class="flex justify-around items-center py-2">
            <a href="{{ path('app_home') }}" class="flex flex-col items-center text-gray-600 p-2">
                <i class="fas fa-home text-xl"></i>
                <span class="text-xs mt-1">Accueil</span>
            </a>
            <a href="{{ path('app_discover') }}" class="flex flex-col items-center text-blue-600 p-2 relative">
                <i class="fas fa-compass text-xl"></i>
                <span class="text-xs mt-1">Explorer</span>
                <div class="absolute -bottom-2 w-10 h-1 bg-blue-600 rounded-full"></div>
            </a>
            <div class="relative">
                <a href="{{ path('app_profil') }}" class="flex items-center justify-center p-3 bg-gradient-to-r from-blue-600 to-blue-700 text-white rounded-full shadow-md -mt-5 relative z-10">
                    <i class="fas fa-plus"></i>
                </a>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-12 h-12 bg-white rounded-full -z-10"></div>
            </div>
            <a href="#" class="flex flex-col items-center text-gray-600 p-2">
                <i class="fas fa-bell text-xl"></i>
                <span class="text-xs mt-1">Alertes</span>
            </a>
            <a href="{{ path('app_profil') }}" class="flex flex-col items-center text-gray-600 p-2">
                <i class="fas fa-user text-xl"></i>
                <span class="text-xs mt-1">Profil</span>
            </a>
        </div>
    </nav>
</main>
{% endblock %}