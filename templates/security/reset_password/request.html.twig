{% extends 'base.html.twig' %}

{% block title %}Réinitialisation du mot de passe{% endblock %}

{% block body %}
<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 py-12 px-4 sm:px-6 lg:px-8 flex flex-col items-center justify-center">
    <div class="w-full max-w-md">
        <h1 class="text-3xl font-bold text-center text-gray-900 dark:text-white">Réinitialiser votre mot de passe</h1>
        <p class="mt-2 text-center text-gray-600 dark:text-gray-300">Veuillez entrer votre adresse email pour recevoir un lien de réinitialisation.</p>

        <form action="{{ path('app_reset_password_request') }}" method="post" class="mt-6 space-y-6">
            {{ form_start(form) }}
            <div>
                {{ form_row(form.email) }}
            </div>
            <div>
                <button type="submit" class="w-full flex justify-center items-center py-3 px-4 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition duration-200">
                    Envoyer le lien de réinitialisation
                </button>
            </div>
            {{ form_end(form) }}
        </form>

        <div class="mt-6 text-center">
            <a href="{{ path('app_login') }}" class="text-blue-600 dark:text-blue-400 hover:text-blue-800 dark:hover:text-blue-300">Retour à la connexion</a>
        </div>
    </div>
</div>
{% endblock %}